        "memory": {
            "format": "ÓøÖ {}% ",
            "interval": 1,
            "on-click": "ghostty -e htop"
        },
        "disk": {
            "interval": 30,
            "format": "Û∞ãä {percentage_used}% ",
            "path": "/",
