{
        "layer": "top",
        "position": "top",
        "reload_style_on_change": true,
        "modules-left": ["custom/notification","clock","custom/pacman","tray"],
        "modules-center": ["hyprland/workspaces","custom/vpn"],
        "modules-right": ["cpu","memory","network","disk" ,"pulseaudio","custom/poweroff"],

        "hyprland/workspaces": {
            "format": "{icon}",
            "format-icons": {
                "active": "ÔÑë",
                "default": "ÔÑë",
